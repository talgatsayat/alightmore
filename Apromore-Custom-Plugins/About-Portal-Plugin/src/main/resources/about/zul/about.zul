<window id="pluginInfo" height="70vh" width="70vw" sizable="false" sclass="ap-about-window">
  <tabbox vflex="1">
    <tabs>
      <tab label="Details" />
    </tabs>
    <tabpanels>
      <tabpanel hflex="1">
        <vlayout sclass="ap-about-details">
          <div sclass="ap-about-logo">
            <image src="/zkau/web/themes/${labels.theme}/common/img/brand/logo-white.svg" width="50%" style="position: relative; top: 3px"/>
          </div>
          <div sclass="ap-edition">${arg.edition}</div>
          <div sclass="ap-version">Version: ${arg.version}</div>
          <div sclass="ap-copyright">Copyright 2019-2022, ${arg.holder}</div>
          <div>
            ${arg.detail}
          </div>
        </vlayout>
        <space vflex="10" />
      </tabpanel>
    </tabpanels>
  </tabbox>
  <div align="right" style="padding: 10px;">
    <button id="ok" label="OK" iconSclass="z-icon-check-circle" />
  </div>
</window>