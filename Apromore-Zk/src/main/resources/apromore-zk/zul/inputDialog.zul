<window width="400px" closable="false" position="center" id="inputDialog" sclass="ap-input-dialog">
    <vbox vflex="1">
        <grid sclass="ap-grid ap-form">
            <columns sizable="true">
                <!--<column width="30%"></column>-->
                <column width="100%"></column>
            </columns>
            <rows>
                <row>
                    <label id="labelError" value="" width="100%" style="color:red;"/>
                </row>
                <row>
                    <label id="labelMessage" value="" width="100%"/>
                </row>
                <row>
                    <textbox id="txtValue" value="" width="100%" submitByEnter="true"/>
                </row>
                <row spans="3" sclass="ap-window-footer-actions">
                    <div align="center">
                        <button id="btnOK" label="${labels.common_ok_text}" iconSclass="z-icon-check-circle"></button>
                        <button id="btnCancel" label="${labels.common_cancel_text}" iconSclass="z-icon-times-circle"></button>
                    </div>
                </row>
            </rows>
        </grid>
    </vbox>
</window>
