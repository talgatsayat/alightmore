<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="TESTApromore" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>org.apromore.dao.model.Folder</class>
        <class>org.apromore.dao.model.Group</class>
        <class>org.apromore.dao.model.GroupFolder</class>
        <class>org.apromore.dao.model.GroupLog</class>
        <class>org.apromore.dao.model.GroupProcess</class>
        <class>org.apromore.dao.model.HistoryEvent</class>
        <class>org.apromore.dao.model.Keywords</class>
        <class>org.apromore.dao.model.Log</class>
        <class>org.apromore.dao.model.Membership</class>
        <class>org.apromore.dao.model.Native</class>
        <class>org.apromore.dao.model.NativeType</class>
        <class>org.apromore.dao.model.Permission</class>
        <class>org.apromore.dao.model.Process</class>
        <class>org.apromore.dao.model.ProcessBranch</class>
        <class>org.apromore.dao.model.ProcessModelAttribute</class>
        <class>org.apromore.dao.model.ProcessModelVersion</class>
        <class>org.apromore.dao.model.Role</class>
        <class>org.apromore.dao.model.SearchHistory</class>
        <class>org.apromore.dao.model.User</class>
        <class>org.apromore.dao.model.Workspace</class>
        <class>org.apromore.dao.model.Usermetadata</class>
        <class>org.apromore.dao.model.UsermetadataLog</class>
        <class>org.apromore.dao.model.UsermetadataProcess</class>
        <class>org.apromore.dao.model.UsermetadataType</class>
        <class>org.apromore.dao.model.GroupUsermetadata</class>

        <!--For unit test purpose-->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/apromore?autoReconnect=true"/>
            <property name="javax.persistence.jdbc.user" value="apromore"/>
            <property name="javax.persistence.jdbc.password" value="MAcri"/>
        </properties>

    </persistence-unit>

</persistence>
